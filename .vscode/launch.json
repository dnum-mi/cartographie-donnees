    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug in chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:3000",
            "cwd":"${workspaceFolder}/frontend"
        },
        {
            "command": "npm start",
            "name": "Run npm start",
            "request": "launch",
            "type": "node-terminal",
            "cwd":"${workspaceFolder}/frontend"
        },
        {
            "name": "Python Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "backend.py",
                "FLASK_DEBUG": "1",
                "FLASK_ENV": "development"
            },
            "args": [
                "run"
            ],
            "jinja": true,
            "justMyCode": true,
            "cwd":"${workspaceFolder}/backend"
        },
        {
            "name": "DB upgrade",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "backend.py",
                "FLASK_DEBUG": "1",
                "FLASK_ENV": "development"
            },
            "args": [
                "db",
                "upgrade"
            ],
            "jinja": true,
            "justMyCode": true,
            "cwd":"${workspaceFolder}/backend"
        }
    ]
}